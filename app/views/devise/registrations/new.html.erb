<% content_for :css do %>
  <%= stylesheet_link_tag 'registrations' %>
  <%= stylesheet_link_tag 'commons' %>
<% end %>

<div class="new-user">
  <div class="new-user-triangle"></div>
    <%= form_for(resource, as: resource_name,html: { class: "new-user-container" }, url: registration_path(resource_name)) do |f| %>
      <h2 class="new-user-header">New Account</h2>
      <%= bootstrap_devise_error_messages! %>
      <div id="cover-profile-image" class="img-profile profile-relative">
        <%= image_tag 'No-Image.png',class:'profile-image'%>
      </div>
        <%= f.attachment_field :profile_image,autofocus: true, autocomplete: 'profile_image'%>
      <div class="inputs">
        <%= f.text_field :name, autofocus: true, autocomplete: 'name',placeholder: "name" %>
      </div>
      <div class="inputs">
        <%= f.email_field :email, autofocus: true, autocomplete: 'email',placeholder: "Eメール" %>
      </div>
      <div class="inputs">
        <%= f.password_field :password, autocomplete: 'current-password', 
          placeholder: "Password",
          required: true,
          minlength: @minimum_password_length,
          maxlength: '30' 
        %>
      </div>
      <% if @minimum_password_length %>
        <small class=""><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
      <div class="inputs">
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', 
          placeholder: "Password確認",
          required: true,
          minlength: @minimum_password_length,
          maxlength: '30' 
        %>
        <div class="text-area">
          <%= f.text_area :profile, autofocus: true,class:'area', autocomplete: 'profile',rows:3,placeholder: '一言' %>
        </div>
      </div>
      <%= f.submit 'アカウント登録'%>
    <% end %>
    <%= render 'devise/shared/links' %>
</div>

<%= javascript_include_tag 'user-show-image.js' %>
