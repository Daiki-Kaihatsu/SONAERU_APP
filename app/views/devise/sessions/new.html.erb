<% content_for :css do %>
  <%= stylesheet_link_tag 'logins' %>
  <%= stylesheet_link_tag 'commons' %>
<% end %>

<div class="login">
  <div class="login-triangle"></div>
    <h2 class="login-header">Log In</h2>
      <%= render 'shared/flash_messages'%>
      <%= form_for(resource, as: resource_name,html: { class: "login-container" }, url: session_path(resource_name)) do |f| %>
      <div class="input">
          <%= f.text_field :name, autofocus: true, autocomplete: 'name',placeholder: '名前' %>
      </div>
      <div class="input">
          <%= f.password_field :password, autocomplete: 'current-password',
                required: true,
                minlength: @minimum_password_length,
                maxlength: '30',
                placeholder: 'パスワード' %>
      </div>
          <%= f.submit 'サインイン'%>
      <% end %>
      <%= render 'devise/shared/links' %>
  </div>
</div>